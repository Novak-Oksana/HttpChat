<Window x:Class="HttpChatClientD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpChatClientD"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="chatList" HorizontalAlignment="Left" Height="242" Margin="10,38,0,0" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="sendBtn" Content="SEND" HorizontalAlignment="Left" Margin="432,285,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="SendClick"/>
        <TextBox x:Name="inputTB" HorizontalAlignment="Left" Height="23" Margin="10,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="417"/>
        <Button x:Name="ConnectBtn" Content="CONNECT" HorizontalAlignment="Left" Margin="218,10,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="ConnectClick"/>

    </Grid>
</Window>
